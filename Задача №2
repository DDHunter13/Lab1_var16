#include <iostream>
#include <locale.h>
#include <math.h>
using namespace std;
int main(void) {
	int a, b, c, a2, b2, c2;
	int err, err2;
	int u1, u2, u3;
	float ac, bc, cc, a1, b1, c1;
	setlocale (LC_ALL, "Russian");
	cout << "Введите 3 целых числа: " << endl;
	err = scanf_s("%d %d %d", &a, &b, &c);
	if (err != 3) {
		cout << "Введенные данные неверны." << endl;
		return 1;
	}
	if (a + b > c)
		u1 = 1;
	else u1 = 0;
	if (a + c > b)
		u2 = 1;
	else u2 = 0;
	if (b + c > a)
		u3 = 1;
	else u3 = 0;
	if (u1 == u2)
		if (u2 == u3)
			err2 = 1;
		else err2 = 0;
	else err2 = 0;
	if (err2 == 1){
		b2 = pow(b, 2);
		a2 = pow(a, 2);
		c2 = pow(c, 2);

		ac = b2 + c2 - a2;
		a1 = 2 * b * c;
		ac = ac / a1;

		bc = a2 + c2 - b2;
		b1 = 2 * a * c;
		bc = bc / b1;

		cc = b2 + a2 - c2;
		c1 = 2 * b * a;
		cc = cc / c1;

		if ((cc == 0) || (ac == 0) || (bc == 0)) {
			cout << "Треугольник прямоугольный" << endl;
			return 0;
		}
		else if ((cc < 0) || (ac < 0) || (bc < 0)) {
				cout << "Треугольник тупоугольный" << endl;
				return 0;
			 }
			 else {
				 cout << "Треугольник остроугольный" << endl;
				 return 0;
			 }
				
	}
	else {
		cout << "Треугольник не существует" << endl;
		return 0;
	}

}
